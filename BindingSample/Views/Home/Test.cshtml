<div class="container">
    <form class="row" method="post" action="/Home/Test">
        <input hidden type="number" name="numbers" value="1000"/>

        <div class="form-group col-6 mt-2">
            <input type="number" name="numbers" class="form-control" />
        </div>
        <div class="form-group col-6 mt-2">
